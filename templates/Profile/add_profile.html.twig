{# templates/profile/add_profile.html.twig #}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        body {
            background-image: url('{{ asset('asset/images/Image1.png') }}');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        .registration-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .registration-form {
            background-color: white;
            padding: 40px;
            border-radius: 40px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
            width: 40%; /* Augmenter la largeur du formulaire */
            text-align: left; /* Centrer le contenu du formulaire */
        }

        .form-title {
            color: MidnightBlue;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-field-label {
            color: darkblue;
            font-weight: bold;
            display: block;
            margin-bottom: 10px;
        }

        .form-field-input {
            color: darkblue;
            font-weight: bold;
            margin-bottom: 15px;
            display: block;
            width: 100%; /* Augmenter la largeur des champs */
        }

        .btn-primary {
            background-color: MidnightBlue;
        }

        /* Augmenter la hauteur du formulaire */
        .registration-form {
            min-height: 500px;
        }
    </style>
{% endblock %}



    {% block body %}
<section class="registration-container">
    <div class="registration-form">
        <h1 class="form-title">Add a new Profile</h1>

        {{ form_errors(form) }}

        {{ form_start(form) }}
        <fieldset class="mb-3">
    {{ form_row(form.jobDescription) }}
    {{ form_row(form.Nationality) }}
    {{ form_row(form.passport) }}
    {{ form_row(form.passportdeliveredOn) }}
    {{ form_row(form.User) }}
        </fieldset>

            <fieldset class="mb-3">
                <button type="submit" class="btn btn-primary">Add Profile</button>
                <a href="{{ path('profile_index') }}" class="btn btn-secondary">Annuler</a>
            </fieldset>

    {{ form_end(form) }}
    </div>
</section>
{% endblock %}