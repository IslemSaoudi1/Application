{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-image: url('{{ asset('asset/images/Image1.png') }}');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        .registration-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .registration-form {
            background-color: white;
            padding: 40px;
            border-radius: 40px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
            width: 40%; /* Augmenter la largeur du formulaire */
            text-align: left; /* Centrer le contenu du formulaire */
        }

        .form-title {
            color: MidnightBlue;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-field-label {
            color: darkblue;
            font-weight: bold;
            display: block;
            margin-bottom: 10px;
        }

        .form-field-input {
            color: darkblue;
            font-weight: bold;
            margin-bottom: 15px;
            display: block;
            width: 100%; /* Augmenter la largeur des champs */
        }

        .btn-primary {
            background-color: MidnightBlue;
        }

        /* Augmenter la hauteur du formulaire */
        .registration-form {
            min-height: 500px;
        }
    </style>
{% endblock %}

{% block body %}
    <section class="registration-container">
        <div class="registration-form">
            <h1 class="form-title">Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
            <fieldset class="mb-3">
                {{ form_row(registrationForm.email, { 'label_attr': {'class': 'form-field-label'}, 'attr': {'class': 'form-field-input'} }) }}
                {{ form_row(registrationForm.lastname, { 'label_attr': {'class': 'form-field-label'}, 'attr': {'class': 'form-field-input'} }) }}
                {{ form_row(registrationForm.Firstname, { 'label_attr': {'class': 'form-field-label'}, 'attr': {'class': 'form-field-input'} }) }}
                {{ form_row(registrationForm.address, { 'label_attr': {'class': 'form-field-label'}, 'attr': {'class': 'form-field-input'} }) }}
                {{ form_row(registrationForm.plainPassword, { 'label_attr': {'class': 'form-field-label'}, 'attr': {'class': 'form-field-input'} }) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <fieldset class="mb-3">
                    <button type="submit" class="btn btn-primary btn-lg my-3">Register</button>
{#                    <a href="{{ path('app_login') }}" class="btn btn-secondary">Connect</a>#}
                </fieldset>
        </div>
        </div>
    </section>

{% endblock %}
