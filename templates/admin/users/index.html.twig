{% extends "base.html.twig" %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <h1>Liste des utilisateurs</h1>
                <a href="{{ path('admin_add') }}" class="btn btn-primary">Ajouter un utilisateur</a>

                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Role</th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% set isAdmin = false %}
                                    {% set isManager = false %}
                                    {% for role in user.roles %}
                                        {% if role == "ROLE_ADMIN" %}
                                            {% set isAdmin = true %}
                                        {% elseif role == "ROLE_MANAGER" %}
                                            {% set isManager = true %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if isAdmin %}
                                        <span class="badge bg-danger">Administrateur</span>
                                    {% elseif isManager %}
                                        <span class="badge bg-warning">Manager</span>
                                    {% else %}
                                        <span class="badge bg-success">User</span>
                                    {% endif %}
                                </td>
                                <td>

                                    {% if user.manager is not empty %}
                                        {{ user.manager.firstname }} {{ user.manager.lastname }}
                                    {% else %}
                                        Aucun manager attribué
                                    {% endif %}
                                </td>
                                <td> <a href="{{ path('admin_edit', {'id': user.id}) }}" class="btn btn-secondary">Modifier</a>

                                    <a href="{{ path('admin_delete', {'id': user.id}) }}" class="btn btn-danger">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}